{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/toast",
      "vue-final-modal",
      "@nuxtjs/moment",
      "@nuxtjs/auth-next",
      "@types/vue-clickaway",
      "@nuxtjs/i18n",
      "@types/dom-mediacapture-record",
      "@nuxtjs/color-mode",
      "@types/lodash",
      "@types/marked",
      "@types/dompurify"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
